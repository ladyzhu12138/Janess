@{
    Layout = "~/Views/Shared/_Layout_Person.cshtml";
    ViewBag.Title = "个人中心";
}
<style>
    .person .glyphicon-user{
        padding-top:16px;
    }

</style>
<div class="center">
    <div class="col-main">
        <aside class="menu">
            <ul>
                <li class="person active">
                    <a href="#"><i class="glyphicon glyphicon-user">&nbsp;<b>个人中心</b></i></a>
                </li>
                <li class="person">
                    <p><i class="glyphicon glyphicon-heart"></i>个人资料</p>
                    <ul>
                        <li> <a href="#" id="information">个人信息</a></li>
                        <li> <a href="#" id="safety">安全设置</a></li>
                    </ul>
                </li>
                <li class="person">
                    <p><i class="glyphicon glyphicon-usd"></i>我的交易</p>
                    <ul>
                        <li><a href="#" id="order">订单管理</a></li>
                        <li> <a href="#" id="EvaluateGoods">评价商品</a></li>
                    </ul>
                </li>

                <li class="person">
                    <p><i class="glyphicon glyphicon-tags"></i>我的收藏</p>
                    <ul>
                        <li> <a href="#" id="collectiongoods">收藏的宝贝</a></li>
                        <li> <a href="#" id="collectionshops">收藏的店铺</a></li>
                    </ul>
                </li>

                <li class="person">
                    <p><i class="glyphicon glyphicon-phone-alt"></i>客服</p>
                    <ul>
                        <li> <a href="#" id="contact">联系我们</a></li>
                    </ul>
                </li>
            </ul>

        </aside>
        <div class="main-wrap">

            <div class="user-info">
                @RenderBody()
            </div>

        </div>
    </div>
</div>
<input type="hidden" id="hidName" value="@ViewBag.Name" />
@section myScript{
<script>
    $(function () {
        $("#information").on("click", function () { window.location.href = "/Buyer/DataView"; });
        $("#safety").on("click", function () { window.location.href = "/Buyer/AltPwdView"; });
        $("#contact").on("click", function () { window.location.href = "/Buyer/ContactView"; });
        $("#collectiongoods").on("click", function () { window.location.href = "/Buyer/CollectionGoodsView"; });
        $("#collectionshops").on("click", function () { window.location.href = "/Buyer/CollectionShopsView"; });
        $("#order").on("click", function () { window.location.href = "/Buyer/OrderView"; });
        $("#EvaluateGoods").on("click", function () { window.location.href = "/Buyer/EvaluateGoodsView"; });
    });
</script>
    }
@RenderSection("myScript", false)

