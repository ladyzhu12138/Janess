<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 简尚购物</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/amazeui.css" rel="stylesheet" />
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link href="~/Content/demo.css" rel="stylesheet" />
    <link href="~/Content/hmstyle.css" rel="stylesheet" />
    <link href="~/Content/colstyle.css" rel="stylesheet" />
    <link href="~/Content/amazeui.css" rel="stylesheet" />
    <link href="~/Content/demo.css" rel="stylesheet" />
    <link href="~/Content/cartstyle.css" rel="stylesheet" />
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link href="~/Content/jsstyle.css" rel="stylesheet" />
    <link href="~/Content/sustyle.css" rel="stylesheet" />

    <script src="~/Scripts/address.js"></script>   
    <script src="~/Scripts/jquery-1.7.min.js"></script>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/amazeui.min.js"></script>
    <script src="~/Scripts/amazeui.js"></script>
</head>
<body>
    @* 顶部导航栏 *@
    <div class="hmtop">
        <!--顶部导航条 -->
        <div class="am-container header">
            <ul class="message-l">
                <div class="topMessage">
                    <div class="menu-hd" id="loginContainer">
                        <a href="/Login/SignInView" class="h">亲，请登录</a>
                        <a href="/Login/SignUpView" target="_top">免费注册</a>
                    </div>
                    <div class="menu-hd" id="loginContainer1">
                        <a href="#" class="h">@ViewBag.Name,欢迎登陆</a>
                        <a href="/Login/SignInView" target="_top">退出</a>
                    </div>
                </div>           
            </ul>
            <ul class="message-r" id="message">
                <div class="topMessage home">
                    <div class="menu-hd"><a href="/Home/Index" target="_top" class="h">商城首页</a></div>
                </div>
                <div class="topMessage my-shangcheng">
                    <div class="menu-hd MyShangcheng"><a href="/Buyer/DataView"><span class="glyphicon glyphicon-user">个人中心</span></a></div>
                </div>
                <div class="topMessage mini-cart">
                    <div class="menu-hd"><a id="mc-menu-hd" href="/Buyer/CartView" target="_top"><span class="glyphicon glyphicon-shopping-cart">购物车</span><strong id="J_MiniCartNum" class="h"></strong></a></div>
                </div>
                <div class="topMessage favorite">
                    <div class="menu-hd"><a href="/Buyer/CollectionGoodsView" target="_top"><span class="glyphicon glyphicon-star">收藏夹</span></a></div>
                </div>
                <div class="topMessage favorite" id="shopDiv">
                    <div class="menu-hd"><a href="/Seller/Index"target="_top"><span class="glyphicon glyphicon-star">我的店铺</span></a></div>
                </div>
            </ul>
        </div>

        <!--悬浮搜索框-->

        <div class="nav white">
            @* logo 后期绘制 *@
            @*<div class="logo"><img src="../images/logo.png"></div>*@
            <div class="logoBig">
                <li class=""><img src="~/Image/logobig.png" /></li>
            </div>

            <div class="search-bar pr">
                <a name="index_none_header_sysc" href="/Buyer/SearchView"></a>
                <form>
                    <input id="searchInput" name="index_none_header_sysc" type="text" placeholder="搜索" autocomplete="off">
                    <input id="ai-topsearch" class="submit am-btn" value="搜索" index="1" type="button">
                    <script>
                        $("#ai-topsearch").on("click", search);
                        function search() {
                            var searchVal = $("#searchInput").val();
                            var url = "/Buyer/SearchView?val=" + searchVal;
                            window.location.href = url;
                        };

                    </script>
                </form>
            </div>
        </div>

        <div class="clear"></div>
    </div>
    @RenderBody()
    @* footer *@
    <footer class="container body-content">
        <hr />
        @* 尾部 *@
        <div class="footer">
            <div class="footer-hd ">
                <p>
                    <a href="# ">简尚科技</a>
                    <b>|</b>
                    <a href="# ">商城首页</a>
                    <b>|</b>
                    <a href="# ">支付宝</a>
                    <b>|</b>
                    <a href="# ">物流</a>
                </p>
            </div>
            <div class="footer-bd ">
                <p>
                    <a href="# ">关于简尚</a>
                    <a href="# ">合作伙伴</a>
                    <a href="# ">联系我们</a>
                    <a href="# ">网站地图</a>
                    <em>© 2017-2018 Time 版权所有. </em>
                </p>
            </div>
        </div>
    </footer>
    @* 侧边导航 *@
    <div class=tip>
        <div id="sidebar" style="background-color:#EEEEEE">
            <div id="wrap">
                <div id="prof" class="item ">
                    <a href="/Buyer/DataView">
                        <span class="glyphicon glyphicon-user"></span>
                    </a>
                    <div class="ibar_login_box status_login ">
                        <div class="avatar_box ">
                            <p class="avatar_imgbox "><img src="../images/no-img_mid_.jpg " /></p>
                            <ul class="user_info ">
                                <li>用户名：sl1903</li>
                                <li>级&nbsp;别：普通会员</li>
                            </ul>
                        </div>
                        <div class="login_btnbox ">
                            <a href="# " class="login_order ">我的订单</a>
                            <a href="# " class="login_favorite ">我的收藏</a>
                        </div>
                        <i class="icon_arrow_white "></i>
                    </div>

                </div>
                <div id="shopCart " class="item ">
                    <a href="/Buyer/CartView">
                        <span class="message "></span>
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                    </a>
                    <p style="color:black">
                        购物车
                    </p>
                    <p class="cart_num " style="color:black">0</p>
                </div>
                <div id="asset " class="item ">
                    <a href="# ">

                        <span class="glyphicon glyphicon-usd"></span>
                    </a>
                    <div class="mp_tooltip ">
                        我的资产
                        <i class="icon_arrow_right_black "></i>
                    </div>
                </div>

                <div id="foot " class="item ">
                    <a href="# ">
                        <span class="zuji "></span>
                        <span class="glyphicon glyphicon-eye-open"></span>
                    </a>
                    <div class="mp_tooltip ">
                        我的足迹
                        <i class="icon_arrow_right_black "></i>
                    </div>
                </div>

                <div id="brand " class="item ">
                    <a href="#">
                        <span class="glyphicon glyphicon-star"></span>
                    </a>
                    <div class="mp_tooltip ">
                        我的收藏
                        <i class="icon_arrow_right_black "></i>
                    </div>
                </div>


                <div class="quick_toggle " style="background-color:#EEEEEE">
                    <li class="qtitem ">
                        <a href="# ">
                            <span class="kfzx "></span>
                            <span class="glyphicon glyphicon-earphone "></span>
                        </a>
                        <div class="mp_tooltip ">客服中心<i class="icon_arrow_right_black "></i></div>
                    </li>
                    <!--二维码 -->
                    <li class="qtitem ">
                        <a href="#none ">
                            <span class="mpbtn_qrcode "></span>
                            <span class="glyphicon glyphicon-qrcode"></span>
                        </a>
                        <div class="mp_qrcode " style="display:none; "><img src="../images/weixin_code_145.png " /><i class="icon_arrow_white "></i></div>
                    </li>
                    <li class="qtitem ">
                        <a href="#top " class="return_top ">
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        </a>
                    </li>
                </div>

                <!--回到顶部 -->
                <div id="quick_links_pop " class="quick_links_pop hide ">

                </div>

            </div>

        </div>
        <div id="prof-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                我
            </div>
        </div>
        <div id="shopCart-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                购物车
            </div>
        </div>
        <div id="asset-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                资产
            </div>

            <div class="ia-head-list ">
                <a href="# " target="_blank " class="pl ">
                    <div class="num ">0</div>
                    <div class="text ">优惠券</div>
                </a>
                <a href="# " target="_blank " class="pl ">
                    <div class="num ">0</div>
                    <div class="text ">红包</div>
                </a>
                <a href="# " target="_blank " class="pl money ">
                    <div class="num ">￥0</div>
                    <div class="text ">余额</div>
                </a>
            </div>

        </div>
        <div id="foot-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                足迹
            </div>
        </div>
        <div id="brand-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                收藏
            </div>
        </div>
        <div id="broadcast-content " class="nav-content ">
            <div class="nav-con-close ">
                <i class="am-icon-angle-right am-icon-fw "></i>
            </div>
            <div>
                充值
            </div>
        </div>
    </div>
    <script src="~/Scripts/quick_links.js"></script>
    @RenderSection("myScript", false)
</body>
</html>