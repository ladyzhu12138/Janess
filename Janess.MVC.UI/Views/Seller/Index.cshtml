@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSellerIndex.cshtml";
}
<style>
    .row .col-md-2 {
        width: 18%;
        height: auto;
        background: #f6f6f6;
        /*border:1px solid #8b8b8b;*/
        margin-right: 2%;
    }

        .row .col-md-2 a {
            color: gray;
        }

    .row .col-md-10 {
        width: 80%;
        height:735px;
        /*border:1px solid #8b8b8b;*/
    }

    .row .col-md-2 .first, .second, .third, .forth {
        width: auto;
        height: 50px;
        padding: 15px;
    }

    iframe {
        width: 100%;
        height: 100%;
    }
</style>
<body>
    <div class="row">
        <div class="col-md-2">
            <div class="first">
                <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                <a href="/Seller/GoodsView" target="show">宝贝管理</a>
            </div>
            <div class="second">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <a href="/Seller/EditGoodsView" target="show">宝贝添加</a>
            </div>
            <div class="third">
                <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                <a href="/Seller/ShopView" target="show">店铺信息管理</a>
            </div>
            <div class="forth">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                <a href="/Seller/OrderViewPager" target="show">店铺订单管理</a>
            </div>
        </div>
        <div class="col-md-10">
            <iframe id="ifmMain" name="show" src="/Seller/GoodsView" frameborder="0"></iframe>
        </div>
    </div>
</body>
<input type="hidden" id="sellerHidName" value="@ViewBag.Name" />
@section myScript{
    <script type="text/javascript">
        $(function () {
            if ($("#sellerHidName").val()) {
                $("#sellernameDiv").show();
            }
            else {
                $("#sellernameDiv").hide();
            }
        })
    </script>
}
